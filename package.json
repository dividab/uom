{
  "name": "uom",
  "version": "2.1.0",
  "main": "lib-cjs/index.js",
  "module": "lib-esm/index.js",
  "types": "lib-cjs/index",
  "description": "Extensible unit of measure conversion with type safety for typescript",
  "author": "jonas.kello@divid.se",
  "repository": "https://github.com/dividab/uom",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.3.0",
    "@types/tape": "^4.2.32",
    "codecov": "^3.1.0",
    "husky": "^0.14.3",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^7.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-immutable": "^4.6.0",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "lint": "tslint -p src --config ./tslint.json -- './{src,test}/**/*.ts{,x}'",
    "build": "yarn build:clean && yarn build:cjs && yarn build:esm && yarn gen-docs",
    "build:clean": "rm -rf ./lib-cjs ./lib-esm",
    "build:cjs": "tsc -p src",
    "build:esm": "tsc -p src --module es2015 --moduleResolution node --outDir ./lib-esm",
    "test": "tape --require ts-node/register \"test/**/*.ts\" | tap-spec",
    "testjs": "yarn test:build && tape \"lib-test/**/*.js\"",
    "test:build": "tsc -p test",
    "test:build:clean": "rm -rf test/lib",
    "verify": "yarn lint && yarn build && yarn coverage",
    "precommit": "lint-staged",
    "coverage": "rimraf coverage .nyc_output && nyc yarn test",
    "report-coverage": "codecov -f coverage/*.json",
    "gen-docs": "jsdoc2md --partial docs/scope.hbs --files lib-esm/serialize.js lib-esm/format.js lib-esm/amount.js lib-esm/unit.js > docs/api.md",
    "publish-npm": "yarn test && yarn build && yarn publish"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint",
    "*.{ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
