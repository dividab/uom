{
  "extends": "./tsconfig-base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    // Output options
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib-cjs",
    "rootDir": "./src",
    "sourceMap": true,
    // Lib options
    "lib": ["es5", "es2015", "dom"],
    // If we do not specify this we get clashes in global types
    "types": ["node", "mocha"]
  }
}
